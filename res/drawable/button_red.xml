<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <solid android:color="@android:color/holo_red_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:centerColor="#777" android:endColor="#BBB" android:startColor="#777" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:centerColor="@android:color/holo_red_dark" android:endColor="@android:color/holo_red_light" android:startColor="@android:color/holo_red_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
</selector>