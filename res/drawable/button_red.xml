<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:centerColor="@android:color/holo_red_light" android:endColor="@android:color/holo_red_light" android:startColor="@android:color/holo_red_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:centerColor="#ffcc5353" android:endColor="#ffff6c6c" android:startColor="#ffcc5353" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:centerColor="@android:color/holo_red_dark" android:endColor="@android:color/holo_red_light" android:startColor="@android:color/holo_red_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <corners android:radius="3dp" />
        </shape></item>
</selector>