<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:centerColor="@color/button_green_light" android:endColor="@color/button_green_light" android:startColor="@color/button_green_dark" />
            <stroke android:width="1dp" android:color="@color/button_green_dark" />
            <corners android:radius="3dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:centerColor="@color/button_green_dark_disabled" android:endColor="@color/button_green_light_disabled" android:startColor="@color/button_green_dark_disabled" />
            <stroke android:width="1dp" android:color="@color/button_green_dark_disabled" />
            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:centerColor="@color/button_green_dark" android:endColor="@color/button_green_light" android:startColor="@color/button_green_dark" />
            <stroke android:width="1dp" android:color="@color/button_green_dark" />
            <corners android:radius="3dp" />
        </shape></item>
</selector>