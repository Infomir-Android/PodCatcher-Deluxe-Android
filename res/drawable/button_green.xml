<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:centerColor="@android:color/holo_green_light" android:endColor="@android:color/holo_green_light" android:startColor="@android:color/holo_green_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_green_dark" />
            <corners android:radius="3dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:centerColor="#ff7b993f" android:endColor="#ffaecc55" android:startColor="#ff7b993f" />
            <stroke android:width="1dp" android:color="@android:color/holo_green_dark" />
            <corners android:radius="3dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:centerColor="@android:color/holo_green_dark" android:endColor="@android:color/holo_green_light" android:startColor="@android:color/holo_green_dark" />
            <stroke android:width="1dp" android:color="@android:color/holo_green_dark" />
            <corners android:radius="3dp" />
        </shape></item>
</selector>