<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <fragment
        android:id="@+id/podcast_list"
        android:name="net.alliknow.podcatcher.fragments.PodcastListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />
    <View
        android:id="@+id/first_divider"
        android:layout_width="@dimen/divider_width"
        android:layout_height="match_parent"
        android:background="@color/divider_off" />
    <fragment
        android:id="@+id/episode_list"
        android:name="net.alliknow.podcatcher.fragments.EpisodeListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />
    <View 
        android:id="@+id/second_divider"
        android:layout_width="@dimen/divider_width"
        android:layout_height="match_parent"
        android:background="@color/divider_off" />
    <fragment
        android:id="@+id/episode"
        android:name="net.alliknow.podcatcher.fragments.EpisodeFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4" />
</LinearLayout>
