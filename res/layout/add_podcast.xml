<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:minWidth="700dp"
        >
    <EditText
            android:id="@+id/podcast_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/podcast_enter_url_here"
            android:textColor="@color/dialog_item_text_default"
            android:imeOptions="actionGo"
            android:inputType="textUri|textNoSuggestions"/>
    <net.alliknow.podcatcher.view.HorizontalProgressView
            android:id="@+id/add_podcast_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <ImageView
            style="@style/PodcatcherTheme.DialogDivider.Horizontal"
            android:layout_marginTop="10dp"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button
                android:id="@+id/suggestion_add_button"
                style="@style/PodcatcherTheme.DialogButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/suggestions"
                />
        <ImageView
                style="@style/PodcatcherTheme.DialogDivider.Vertical"
                />
        <Button
                android:id="@+id/import_opml_button"
                style="@style/PodcatcherTheme.DialogButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/opml_import"
                />
        <ImageView
                style="@style/PodcatcherTheme.DialogDivider.Vertical"
            />
        <Button
                android:id="@+id/podcast_add_button"
                style="@style/PodcatcherTheme.DialogButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/podcast_add_button"
                />
    </LinearLayout>
</LinearLayout>