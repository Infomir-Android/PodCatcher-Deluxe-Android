<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <EditText
                android:id="@+id/tv_current_time"
                style="@style/PodcatcherTheme.Text.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/text_info_color"
                android:background="@drawable/et_current_time_bg"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                />

        <TextView
                android:id="@+id/tv_full_time"
                style="@style/PodcatcherTheme.Text.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_info"
                />

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            >

        <ImageView
                android:layout_width="@dimen/ico_rewind_forward_width"
                android:layout_height="@dimen/ico_rewind_forward_height"
                android:src="@drawable/ic_menu_rewind"
                />

        <net.alliknow.podcatcher.view.PlayPauseSeekbar
                android:id="@+id/play_pause_seekbar"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

        <!--<SeekBar
                android:id="@+id/player_seekbar"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:thumb="@drawable/menu_seekbar_thumb_default"
                android:thumbOffset="-4dp"
                android:background="@drawable/menu_seekbar_bg"
                android:progressDrawable="@android:color/transparent"
                android:focusableInTouchMode="true"
                />-->

        <!-- TODO!!! -->

        <ImageView
                android:layout_width="@dimen/ico_rewind_forward_width"
                android:layout_height="@dimen/ico_rewind_forward_height"
                android:src="@drawable/ic_menu_forward"
                />

    </LinearLayout>

</LinearLayout>