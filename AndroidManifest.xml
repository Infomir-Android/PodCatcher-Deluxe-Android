<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.alliknow.podcatcher"
    android:versionCode="6"
    android:versionName="2.2" >
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="true" />
    <application
        android:name="Podcatcher"
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity
            android:name=".PodcastActivity" android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowEpisodeListActivity" />
        <activity android:name=".ShowEpisodeActivity" />
        <activity android:name=".AddPodcastActivity" android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <service
            android:name=".services.PlayEpisodeService"
            android:exported="false" >
        </service>
    </application>
</manifest>